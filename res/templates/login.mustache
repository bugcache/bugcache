<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link rel="stylesheet" href="/screen.css" media="screen">
</head>
<body>
<div class="layout-empty-center">
    <div class="login">
        <form class="login-form" action="/login" method="POST">
            <h1>Log In</h1>

            {{#data.error}}
                <div class="login-error">
                    {{data.error}}
                </div>
            {{/data.error}}

            <div class="login-input">
                <label class="login-input-label" for="login-username">Username</label>
                <input id="login-username" type="text" name="username" value="{{data.username}}" {{^data.focusPassword}}autofocus{{/data.focusPassword}}>
            </div>

            {{#data.selectUsername}}
                <script>
                    var input = document.getElementById("login-username");
                    input.select();
                    input.focus();
                </script>
            {{/data.selectUsername}}

            <div class="login-input">
                <label class="login-input-label" for="login-password">Password</label>
                <input id="login-password" type="password" name="password" {{#data.focusPassword}}autofocus{{/data.focusPassword}}>
            </div>

            <div class="login-input">
                <input id="login-remember" type="checkbox" name="remember" value="yes">
                <label for="login-remember">Remember Me</label>
            </div>

            <div class="login-submit">
                <button type="submit" class="login-button">
                    Login
                </button>
            </div>
        </form>

        <div class="login-footer">
            Don't have an account yet?
            <br>
            <a href="/register" class="login-footer-action">
                Sign Up
            </a>
        </div>
    </div>
</div>
</body>
</html>